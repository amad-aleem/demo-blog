<h2 class="text-center">List of Users</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <%# <th scope="col">Name</th> %>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @users.each do |user| %>
      <th scope="row"><%= user.id%></th>
      <%# <td><%= user.name</td> %>
      <td><%= user.email%></td>
      <td><%= link_to "Show", user_path(user), class: 'btn btn-sm btn-info'%> | <%= link_to "Edit", edit_user_path(user), class: 'btn btn-sm btn-secondary' %> | <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'  %></td>
    </tr>
    <% end %>
  </tbody>
</table>
