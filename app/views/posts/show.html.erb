<div class="jumbotron jumbotron-fluid">
  <div class="container ">
    <h1 class="display-5 text-center"><%= @post.title%></h1>
    <div class="lead text-center" >
      <div class="mx-auto text-center"  style="width: 50%; display: block;">
        <form>
          <div class="form-group row">
            <label for="staticTitle" class="col-sm-3 col-form-label" style="font-weight: bold;">Title:</label>
            <div class="col-sm-8">
              <input type="text" readonly class="form-control-plaintext text-center" id="staticTitle" value="<%= @post.title%>">
            </div>
          </div>
          <div class="form-group row">
            <label for="staticAddedOn" class="col-sm-3 col-form-label" style="font-weight: bold;">Added:</label>
            <div class="col-sm-8">
              <input type="text" readonly class="form-control-plaintext text-center" id="staticAddedOn" value="<%= distance_of_time_in_words(@post.created_at, Time.now)+ ' ago'%>">
            </div>
          </div>
          <div class="form-group row">
            <label for="staticDescription" class="col-sm-3 col-form-label" style="font-weight: bold;">Description:</label>
            <div class="col-sm-8">
              <input type="text" readonly class="form-control-plaintext text-center" id="staticDescription" value="<%= @post.body%>">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
